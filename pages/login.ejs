<%- include('../components/head'); %>

    <div class="container h-100 pt-5 overflow-scroll">
        <div class="row">
            <form class="col-lg-6 col-sm-12" onsubmit="login(event)">
                <p class="text-danger d-none" name="error"></p>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password">

                </div>
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary mt-4 w-100">Log in</button>
                    <p class="mt-2">or <a href="/registration">Register</a></p>
                </div>

            </form>
            <div class="col-6 d-none d-lg-block">
                <img src="./images/todo.svg" alt="completion.svg"
                    style=" width: 500px; height: 500px; object-fit: contain;">
            </div>
        </div>
    </div>

    <%- include('../components/footer'); %>