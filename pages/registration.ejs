<%- include('../components/head'); %>

    <div class="container h-100 pt-5 overflow-scroll">

        <div class="row h-100">
            <form class="col-lg-6 col-sm-12 h-100 overflow-scroll pb-5" onsubmit="registration(event)">
                <p class="text-danger d-none" name="error"></p>
                <div class="mb-3">
                    <label for="firstname" class="form-label">Firstname</label>
                    <input type="text" class="form-control" name="firstname" id="firstname" autocomplete="off">
                    <div class="form-text text-danger" name="error"></div>
                </div>
                <div class="mb-3">
                    <label for="lastname" class="form-label">Lastname</label>
                    <input type="text" class="form-control" name="lastname" id="lastname" autocomplete="off">
                    <div class="form-text text-danger" name="error"></div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp">
                    <div class="form-text">We'll never share your email with anyone else.</div>
                    <div class="form-text text-danger" name="error"></div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password">
                    <div class="form-text">The password must be longer than 6 characters.</div>
                    <div class="form-text text-danger" name="error"></div>
                </div>

                <div class="d-flex flex-column justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary mt-4 w-100">Register</button>
                    <p class="mt-2">or <a href="/login">Log in</a></p>
                </div>
            </form>
            <div class="col-6 d-none d-lg-block">
                <img src="./images/completion.svg" alt="completion.svg"
                    style=" width: 500px; height: 500px; object-fit: contain;">
            </div>
        </div>
    </div>

    <%- include('../components/footer'); %>